{% extends 'base.html.twig' %}

{% block title %}Actualite
{% endblock %}

{% block body %}
    <h1>Actualite</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actualite.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ actualite.titre }}</td>
            </tr>
            <tr>
                <th>Lead</th>
                <td>{{ actualite.lead }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ actualite.contenu }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ actualite.image }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ actualite.createdAt ? actualite.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ actualite.auteur }}</td>
            </tr>
            <tr>
                <th>OrdreAffichage</th>
                <td>{{ actualite.ordreAffichage ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>EtatPub</th>
                <td>{{ actualite.etatPub }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ actualite.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_actualite_index') }}">back to list</a>

    <a href="{{ path('admin_actualite_edit', {'id': actualite.id}) }}">edit</a>

    {{ include('admin/actualite/_delete_form.html.twig') }}
{% endblock %}